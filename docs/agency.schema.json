{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"type": "object",
	"properties": {
		"metadata": {
			"type": "object",
			"properties": {
				"title": {
					"type": "string"
				},
				"author": {
					"type": "string"
				},
				"date": {
					"type": "string"
				}
			}
		},
		"contacts": {
			"type": "array",
			"items": {
				"type": "object",
				"properties": {
					"name": {
						"type": "string"
					},
					"phone": {
						"type": "string"
					},
					"address": {
						"type": "string"
					}
				},
				"required": [
					"name"
				]
			}
		},
		"protocolGroups": {
			"type": "array",
			"items": {
				"type": "object",
				"properties": {
					"name": {
						"type": "string"
					},
					"protocols": {
						"type": "array",
						"items": {
							"type": "object",
							"properties": {
								"id": {
									"type": "string"
								},
								"name": {
									"type": "string"
								},
								"preamble": {
									"type": "string",
									"format": "html",
									"options": {
										"wysiwyg": true
									}
								},
								"assessments": {
									"type": "string",
									"format": "html",
									"options": {
										"wysiwyg": true
									}
								},
								"standingOrders": {
									"type": "object",
									"properties": {
										"basic": {
											"type": "string",
											"format": "html",
											"options": {
												"wysiwyg": true
											}
										},
										"intermediate": {
											"type": "string",
											"format": "html",
											"options": {
												"wysiwyg": true
											}
										},
										"paramedic": {
											"type": "string",
											"format": "html",
											"options": {
												"wysiwyg": true
											}
										},
										"allLevels": {
											"type": "string",
											"format": "html",
											"options": {
												"wysiwyg": true
											}
										}
									},
									"required": [
									]
								},
								"notes": {
									"type": "string",
									"format": "html",
									"options": {
										"wysiwyg": true
									}
								}
							},
							"required": [
								"id",
								"name"
							]
						}
					}
				},
				"required": [
					"name",
					"protocols"
				]
			}
		},
		"resources": {
			"type": "array",
			"items": {
				"type": "object",
				"properties": {
					"name": {
						"type": "string"
					},
					"body": {
						"type": "string",
						"format": "html",
						"options": {
							"wysiwyg": true
						}
					}
				},
				"required": [
					"name",
					"body"
				]
			}
		}
	},
	"required": [
		"contacts",
		"protocolGroups",
		"resources",
		"metadata"
	]
}
